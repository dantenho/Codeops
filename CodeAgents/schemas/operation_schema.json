{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "OperationLog",
    "type": "object",
    "required": [
        "agent",
        "timestamp",
        "operation",
        "target",
        "status"
    ],
    "properties": {
        "agent": {
            "type": "string",
            "enum": [
                "GrokIA",
                "GeminiFlash25",
                "GeminiPro25",
                "GeminiPro30",
                "Jules",
                "ClaudeCode",
                "Composer"
            ]
        },
        "timestamp": {
            "type": "string",
            "format": "date-time"
        },
        "operation": {
            "type": "string",
            "enum": [
                "CREATE",
                "REFACTOR",
                "DEBUG",
                "DELETE",
                "MODIFY",
                "ANALYZE"
            ]
        },
        "target": {
            "type": "object",
            "properties": {
                "file": {
                    "type": "string"
                },
                "function": {
                    "type": "string"
                },
                "lines": {
                    "type": "object",
                    "properties": {
                        "start": {
                            "type": "integer"
                        },
                        "end": {
                            "type": "integer"
                        }
                    }
                }
            }
        },
        "status": {
            "type": "string",
            "enum": [
                "SUCCESS",
                "FAILURE",
                "PARTIAL",
                "PENDING"
            ]
        },
        "duration_ms": {
            "type": "integer"
        },
        "context": {
            "type": "object"
        }
    }
}
