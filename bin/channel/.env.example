# Suggestion Tunnel Configuration

# Google Gemini API Key (REQUIRED for Consultant)
GOOGLE_API_KEY=your-google-api-key-here

# Tunnel Settings
TUNNEL_ENABLED=true
TUNNEL_LOG_LEVEL=INFO

# Antigravity Filter Settings
TUNNEL_ANTIGRAVITY_STRICT_MODE=true
TUNNEL_ANTIGRAVITY_MIN_SEVERITY=HIGH

# Consultant Settings
TUNNEL_CONSULTANT_ENABLED=true
TUNNEL_CONSULTANT_MODEL=gemini-2.5-pro-exp-0827
TUNNEL_CONSULTANT_AUTO_START_LOOP=false

# Evaluation Loop (Random intervals create FEAR)
TUNNEL_EVALUATION_MIN_HOURS=1.0
TUNNEL_EVALUATION_MAX_HOURS=3.0

# Reward System
TUNNEL_BASE_TOKEN_AMOUNT=100
TUNNEL_EXCELLENT_THRESHOLD=90
TUNNEL_ACCEPTABLE_THRESHOLD=60
TUNNEL_MAX_MULTIPLIER=2.0

# File Exclusions (comma-separated patterns)
# TUNNEL_EXCLUDE_PATHS=tests/**,node_modules/**,build/**

# API Settings
TUNNEL_API_BASE_URL=http://localhost:8000

# Redis (for async processing)
TUNNEL_REDIS_URL=redis://localhost:6379/0
TUNNEL_CELERY_ENABLED=false
