      "front": {
        "question": "How do you access the first and last elements of a list in Python?",
        "code": "items = [10, 20, 30, 40, 50]",
        "hints": [
          "Python uses zero-based indexing",
          "Negative indices count from the end"
        ]
      },
      "back": {
        "answer": "Use index [0] for first, [-1] for last",
        "code": "first = items[0]  # 10\nlast = items[-1]  # 50",
        "explanation": "Python uses zero-based indexing, so [0] gets the first element. Negative indices count backward from the end, so [-1] is the last element, [-2] is second-to-last, etc.",
        "related_concepts": ["list slicing", "indexing", "sequences"],
        "common_mistakes": [
          "Using [1] for the first element (off-by-one error)",
          "Forgetting that indices start at 0"
        ],
        "references": [
          "https://docs.python.org/3/tutorial/introduction.html#lists"
        ]
      },
