{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "OperationLog",
  "type": "object",
  "required": ["agent", "timestamp", "operation", "target", "status"],
  "properties": {
    "agent": {
      "type": "string",
      "description": "The agent identifier (e.g., 'GrokIA', 'GeminiFlash25')",
      "examples": ["GrokIA", "GeminiFlash25", "ClaudeCode"]
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of the operation",
      "examples": ["2025-12-03T10:25:00Z"]
    },
    "operation": {
      "type": "string",
      "enum": ["CREATE", "REFACTOR", "DEBUG", "DELETE", "MODIFY", "ANALYZE"],
      "description": "Type of operation performed"
    },
    "target": {
      "type": "object",
      "properties": {
        "file": {
          "type": "string",
          "description": "Path to the affected file"
        },
        "function": {
          "type": "string",
          "description": "Name of the function/class modified",
          "nullable": true
        },
        "lines": {
          "type": "object",
          "properties": {
            "start": {
              "type": "integer",
              "description": "Starting line number"
            },
            "end": {
              "type": "integer",
              "description": "Ending line number"
            }
          },
          "required": ["start", "end"]
        }
      },
      "required": ["file"]
    },
    "status": {
      "type": "string",
      "enum": ["SUCCESS", "FAILURE", "PARTIAL", "PENDING"],
      "description": "Status of the operation"
    },
    "duration_ms": {
      "type": "integer",
      "description": "Operation duration in milliseconds",
      "minimum": 0
    },
    "context": {
      "type": "object",
      "description": "Additional context information",
      "properties": {
        "changed_lines": {
          "type": "integer",
          "description": "Number of lines changed"
        },
        "complexity": {
          "type": "string",
          "description": "Complexity assessment (e.g., O(n), O(log n))"
        },
        "tokens_used": {
          "type": "integer",
          "description": "Number of tokens consumed"
        }
      }
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata for the operation"
    }
  },
  "examples": [
    {
      "agent": "GrokIA",
      "timestamp": "2025-12-03T10:25:00Z",
      "operation": "CREATE",
      "target": {
        "file": "workflow-project/config/ruff.toml",
        "function": null,
        "lines": {"start": 1, "end": 50}
      },
      "status": "SUCCESS",
      "duration_ms": 1500,
      "context": {
        "changed_lines": 50,
        "complexity": "O(1)",
        "tokens_used": 1200
      },
      "metadata": {
        "configuration_type": "linter",
        "project_phase": "initialization"
      }
    }
  ]
}
